<% layout("layouts/boilerplate") %>
<div class="row">
    <h1 class="text-center">New Campground</h1>
    <div class="col-6 offset-3">
        <form action="/campgrounds" method="POST" class="needs-validation" enctype="multipart/form-data" novalidate>
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" id="title" name="campground[title]" class="form-control" required>
            </div>
            <div class="mb-3">
                <label for="location" class="form-label">Location</label>
                <input type="text" id="location" name="campground[location]" class="form-control" required>
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Upload Image</label>
                <input type="file" class="form-control" id="image" name="campground[image]" multiple>
                <div class="form-text">Allowed filetypes: jpeg, jpg, png</div>
                <!-- <input type="text" id="image" name="campground[image]" class="form-control" required> -->
            </div>
            <div class="mb-3">
                <label for="price" class="form-label">Price</label>
                <div class="input-group">
                    <span class="input-group-text">Â£</span>
                    <input type="text" id="price" name="campground[price]" class="form-control" placeholder="0.00"
                        required>
                </div>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea id="description" name="campground[description]" class="form-control"
                    placeholder="type here..." required></textarea>
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Add Campground</button>
            </div>
        </form>
        <div>
            <a href="/campgrounds">Return to All Campgrounds</a>
        </div>
    </div>
</div>
<script src="/js/bootstrapFormValidator.js"></script>