<% layout("layouts/boilerplate") %>
<div id="map" style="width: 100%; height: 500px">
</div>
<h1>All Campgrounds</h1>
<% for( let campground of campgrounds) { %>
<div class="card">
    <div class="row" style="height: 180px">
        <div class="col-md-4">
            <img class="mw-100 mh-auto p-3" src="<% if (campground.images.length > 0) {%><%=campground.images[0].thumbnail%><%}%>" alt="">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">
                    <%=campground.title%>, <%=campground.location%>
                </h5>
                <p class="card-text">
                    <%=campground.description%>
                </p>
                <p class="card-text">
                    <a href="/campgrounds/<%= campground._id %>">View Campground</a>
                </p>
            </div>
        </div>
    </div>
</div>
<% } %>