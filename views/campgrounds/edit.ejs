<% layout("layouts/boilerplate") %>
<div class="row">
    <h1 class="text-center">Editing Campground...</h1>
    <div class="col-md-6 offset-md-3">
        <div>
            Campground ID: <%= campground._id %>
        </div>
        <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST" class="needs-validation"
            enctype="multipart/form-data" novalidate>
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" id="title" name="campground[title]" class="form-control"
                    value="<%= campground.title %>" required>
            </div>
            <div class="mb-3">
                <label for="location" class="form-label">Location</label>
                <input type="text" id="location" name="campground[location]" class="form-control"
                    value="<%= campground.location %>" required>
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Upload Image</label>
                <input type="file" class="form-control" id="image" name="campground[image]" multiple>
                <div class="form-text">Allowed filetypes: jpeg, jpg, png</div>
            </div>
            <div class="mb-3">
                <label for="price" class="form-label">Price</label>
                <div class="input-group">
                    <span class="input-group-text">Â£</span>
                    <input type="text" id="price" name="campground[price]" class="form-control" placeholder="0.00"
                        value="<%= campground.price %>" required>
                </div>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea id="description" name="campground[description]" class="form-control"
                    placeholder="type here..." required><%= campground.description %></textarea>
            </div>
            <div class="mb-3">
                <% if (campground.images.length > 0) {%>
                <% for (let i = 0; i < campground.images.length; i++) {%>
                <img src="<%=campground.images[i].thumbnail%>" class="img-thumbnail">
                <div class="form-check-inline">
                    <label for="image-<%=i+1%>">Delete Image <%=i+1%>?</label>
                    <input type="checkbox" id="image-<%=i+1%>" name="deleteImages[]"
                        value="<%=campground.images[i].filename%>">
                </div>
                <% } %>
                <% } %>
            </div>
            <div class="mb-3">
                <button class="btn btn-info">Update Campground</button>
            </div>
        </form>
        <div>
            <a href="/campgrounds/<%= campground._id %>">Back to Campground</a>
        </div>
    </div>
</div>
<script src="/js/bootstrapFormValidator.js"></script>